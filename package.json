{
  "name": "@graphcms/cli",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.0.1",
  "description": "GraphCMS CLI",
  "author": "Rajat Sharma @rajatsharma",
  "bin": {
    "graphcms": "./bin/run",
    "gcms": "./bin/run"
  },
  "homepage": "https://github.com/graphcms/graphcms-cli",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": "https://github.com/graphcms/graphcms-cli",
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "dependencies": {
    "@oclif/core": "^1",
    "fs-extra": "^10.0.1",
    "github-download-directory": "^2.0.0",
    "got": "11",
    "keyv-file": "^0.2.0",
    "ora-promise": "^1.0.0"
  },
  "devDependencies": {
    "@oclif/test": "^2",
    "@types/chai": "^4",
    "@types/fs-extra": "^9.0.13",
    "@types/got": "^9.6.12",
    "@types/inquirer": "^8.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.9.4",
    "@types/tar": "^6.1.1",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "chai": "^4",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "globby": "^11",
    "mocha": "^9",
    "oclif": "^2",
    "prettier": "^2.5.1",
    "replace-in-file": "^6.3.2",
    "shx": "^0.3.4",
    "ts-node": "^10.7.0",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3"
  },
  "oclif": {
    "bin": "graphcms",
    "dirname": "graphcms",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topicSeparator": " ",
    "topics": {
      "create": {
        "description": "Create GraphCMS project."
      }
    }
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint . --ext .ts --config .eslintrc",
    "postpack": "shx rm -f oclif.manifest.json",
    "prepare": "yarn build && oclif manifest && oclif readme",
    "version": "oclif readme && git add README.md",
    "setup": "node ./setup.js"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "bugs": "https://github.com/graphcms/graphcms-cli/issues",
  "keywords": [
    "oclif"
  ],
  "types": "dist/index.d.ts"
}
